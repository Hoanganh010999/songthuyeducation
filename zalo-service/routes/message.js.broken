    } catch (error) {
      return res.status(503).json({
        success: false,
        message: 'Zalo client not initialized. Please login first.'
      });
    }
    
    const threadId = to;
    const threadType = type === 'group' ? ThreadType.Group : ThreadType.User;
    
    // Build video options - Zalo API requires specific format
    // According to docs: videoUrl, thumbnailUrl are REQUIRED
    // duration, width, height are optional but must be > 0 if provided
    const videoOptions = {
