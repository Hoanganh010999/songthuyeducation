router.post('/recall', verifyApiKey, async (req, res) => {
  try {
    console.log('üì• [zalo-service] POST /api/message/recall received');
    
    const { to, msgId, cliMsgId, type = 'user' } = req.body;
    
    // MULTI-SESSION: Get accountId from header if provided
    let accountId = req.headers['x-account-id'];
    if (accountId) {
      accountId = parseInt(accountId);
    }
    
    if (!to || !msgId) {
      return res.status(400).json({
        success: false,
        message: 'Missing required fields: to, msgId'
      });
    }
    
    let zalo;
    try {
      zalo = getZaloClient(accountId);
    } catch (error) {
      return res.status(503).json({
        success: false,
        message: 'Zalo client not initialized. Please login first.'
      });
    }
    
    const threadId = to;
    const threadType = type === 'group' ? ThreadType.Group : ThreadType.User;
    
    // Use cliMsgId if provided, otherwise use msgId
    const messageIdToRecall = cliMsgId || msgId;
    
    console.log('üîÑ [zalo-service] Recalling message:', {
      threadId,
      threadType: threadType === ThreadType.Group ? 'Group' : 'User',
      msgId,
      cliMsgId: messageIdToRecall,
    });
    
    let result;
    
    // For recalling sent messages (recall for everyone), always use undo() method
    // According to zalo-api-final: "To delete your message for everyone, use undo api instead"
    // undo() works for both private chat and group chat
    // undo signature: undo(payload: UndoPayload, threadId: string, type?: ThreadType)
    // UndoPayload: { msgId: string | number, cliMsgId: string | number }
    const undoPayload = {
      msgId: msgId.toString(),
      cliMsgId: messageIdToRecall.toString(),
    };
    
    console.log('üîÑ [zalo-service] Calling undo to recall message:', {
      payload: undoPayload,
      threadId: threadId.toString(),
      threadType: threadType === ThreadType.Group ? 'Group' : 'User',
    });
    
    result = await zalo.undo(undoPayload, threadId.toString(), threadType);
    
    console.log('‚úÖ [zalo-service] Message recalled successfully:', {
      hasResult: !!result,
      resultKeys: result ? Object.keys(result) : [],
    });
    
    res.json({
      success: true,
      message: 'Message recalled successfully',
      data: result
    });
  } catch (error) {
    console.error('‚ùå [zalo-service] Recall message error:', {
      message: error.message,
      stack: error.stack,
    });
    res.status(500).json({
      success: false,
      message: error.message || 'Failed to recall message',
      error: error.stack
    });
  }
});

