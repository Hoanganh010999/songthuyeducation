/**
 * POST /api/message/send-folder
 * Send folder as a zip file
 * Body: { to, zipPath, folderName, type }
 * Note: This expects a zip file path (created by Laravel backend)
 */
router.post('/send-folder', verifyApiKey, async (req, res) => {
  let tempZipPath = null;
  
  try {
    console.log('üì• [zalo-service] POST /api/message/send-folder received');
    
    const { to, zipPath, folderName, type = 'user' } = req.body;
    
    // MULTI-SESSION: Get accountId from header if provided
    let accountId = req.headers['x-account-id'];
    if (accountId) {
      accountId = parseInt(accountId);
    }
    
    if (!to || !zipPath || !folderName) {
      return res.status(400).json({
        success: false,
        message: 'Missing required fields: to, zipPath, folderName'
      });
    }
    
    // Check if zip file exists
    if (!fs.existsSync(zipPath) || !fs.statSync(zipPath).isFile()) {
      return res.status(400).json({
        success: false,
        message: 'Zip file path does not exist or is not a file'
      });
    }
    
    let zalo;
    try {
      zalo = getZaloClient(accountId);
    } catch (error) {
      return res.status(503).json({
        success: false,
        message: 'Zalo client not initialized. Please login first.'
      });
    }
    
    const threadId = to;
    const threadType = type === 'group' ? ThreadType.Group : ThreadType.User;
    
    // Send ONLY zip file as attachment (NO text to avoid duplicate messages)
    // File name will be auto-displayed by Zalo as downloadable attachment
    const messageContent = {
      msg: '', // Empty - only send file attachment
      attachments: [zipPath]
    };
    
    console.log('üì§ [zalo-service] Sending folder as zip:', {
      threadId,
      threadType: threadType === ThreadType.Group ? 'Group' : 'User',
      zipPath,
      folderName,
    });
    
    const result = await zalo.sendMessage(messageContent, threadId, threadType);
    
    // Record outgoing message for health monitoring
    recordOutgoingMessage(accountId);
    
    // Extract message ID from result
    const msgId = result?.message?.msgId?.toString() || result?.messageId?.toString() || result?.id?.toString() || null;
    const cliMsgId = result?.message?.cliMsgId?.toString() || null;
    const globalMsgId = result?.message?.globalMsgId?.toString() || msgId;
    
    console.log('‚úÖ [zalo-service] Folder sent successfully:', {
      folderName,
      msgId,
      cliMsgId,
      globalMsgId,
    });
    
    res.json({
      success: true,
      message: 'Folder sent successfully',
      data: {
        message_id: msgId,
        cli_msg_id: cliMsgId,
        global_msg_id: globalMsgId,
        folder_name: folderName,
        zip_path: zipPath,
        ...result
      }
    });
  } catch (error) {
    console.error('‚ùå [zalo-service] Send folder error:', {
      message: error.message,
      stack: error.stack,
    });
    
    res.status(500).json({
      success: false,
      message: error.message || 'Failed to send folder',
      error: error.stack
    });
  }
});

