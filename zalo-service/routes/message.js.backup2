    const { thread_id, title, start_time, type = 'user', emoji = 'ğŸ“š', repeat = 0 } = req.body;

    // MULTI-SESSION: Get accountId from header if provided
    let accountId = req.headers['x-account-id'];
    if (accountId) {
      accountId = parseInt(accountId);
    }

    // Validate required fields
    if (!thread_id) {
      return res.status(400).json({
        success: false,
        message: 'thread_id is required'
      });
    }

    if (!title) {
      return res.status(400).json({
        success: false,
        message: 'title is required'
      });
    }

    if (!start_time) {
      return res.status(400).json({
        success: false,
        message: 'start_time is required'
      });
    }

    // Get Zalo client
    let zalo;
    try {
      zalo = getZaloClient(accountId);
      console.log('âœ… [zalo-service] Zalo client retrieved');
    } catch (error) {
      console.error('âŒ [zalo-service] Failed to get Zalo client:', error.message);
      return res.status(503).json({
        success: false,
        message: 'Zalo client not initialized. Please login first.'
      });
    }

    // Convert start_time to timestamp if needed
    let startTimeMs = start_time;
    if (typeof start_time === 'string') {
      // If string, try to parse as ISO date or timestamp
      const parsed = parseInt(start_time);
      if (!isNaN(parsed)) {
        startTimeMs = parsed;
      } else {
        startTimeMs = new Date(start_time).getTime();
      }
    }
    
    // Ensure timestamp is in milliseconds
    if (startTimeMs < 10000000000) {
      // If timestamp is in seconds, convert to milliseconds
      startTimeMs = startTimeMs * 1000;
    }

    // Validate timestamp is in future
    if (startTimeMs < Date.now()) {
      return res.status(400).json({
        success: false,
        message: 'start_time must be a future timestamp'
      });
    }

    // Prepare reminder options according to Zalo API format
    // According to zalo-api-final documentation:
    // createReminder(options: ReminderOptions, threadId: string, type?: ThreadType)
    // ReminderOptions: { title: string, emoji?: string, startTime: number, repeat?: RepeatOption }
    const options = {
      title: title,
      emoji: emoji,
      startTime: startTimeMs,
      repeat: repeat // 0=None, 1=Daily, 2=Weekly, 3=Monthly
    };

    const threadId = thread_id;
    const threadType = type === 'group' ? ThreadType.Group : ThreadType.User;

    console.log('ğŸ“… [zalo-service] Creating reminder:', {
      threadId,
      threadType: threadType === ThreadType.Group ? 'Group' : 'User',
      title,
      emoji,
      startTime: startTimeMs,
      startTimeDate: new Date(startTimeMs).toISOString(),
      repeat,
      accountId
    });

    // Call createReminder API
    const result = await zalo.createReminder(options, threadId, threadType);

    // Record outgoing message for health monitoring
    recordOutgoingMessage(accountId);

    console.log('âœ… [zalo-service] Reminder created successfully:', {
      hasResult: !!result,
      result
    });

    res.json({
      success: true,
      message: 'Reminder created successfully',
      data: result
    });
  } catch (error) {
    console.error('âŒ [zalo-service] Create reminder error:', {
      message: error.message,
      stack: error.stack,
      name: error.name,
    });
    res.status(500).json({
      success: false,
      message: error.message || 'Failed to create reminder',
      error: error.stack
    });
  }
});


/**
 * Recall (delete) a message for everyone
 * Uses deleteMessage API from zalo-api-final
 */
router.post('/recall', verifyApiKey, async (req, res) => {
  try {
    const { to, msgId, cliMsgId, type } = req.body;
    const accountId = req.get('X-Account-Id');

    console.log('ğŸ”¥ [zalo-service] Recall message request:', {
      accountId,
      to,
      msgId,
      cliMsgId,
      type
    });

    // Validate input
    if (!to || !msgId) {
      return res.status(400).json({
        success: false,
        message: 'Missing required fields: to, msgId'
      });
    }

    if (!accountId) {
      return res.status(400).json({
        success: false,
        message: 'Missing X-Account-Id header'
      });
    }

    // Get Zalo API session
    const { getSession } = require('../services/zaloClient');
    const api = getSession(parseInt(accountId));

    if (!api) {
      return res.status(400).json({
        success: false,
        message: 'Zalo session not found. Please login first.'
      });
    }

    // Get sender ID (current logged in user)
    let uidFrom = null;
    try {
      if (typeof api.getOwnId === 'function') {
        uidFrom = await api.getOwnId();
      }
    } catch (error) {
      console.warn('âš ï¸  [zalo-service] Could not get uidFrom:', error.message);
    }

    // Prepare delete message request
    const deleteOptions = {
      data: {
        cliMsgId: cliMsgId || msgId,
        msgId: msgId,
        uidFrom: uidFrom || accountId.toString()
      },
      threadId: to,
      type: type === 'group' ? 1 : 0 // ThreadType.Group = 1, ThreadType.User = 0
    };

    console.log('ğŸ“¤ [zalo-service] Calling deleteMessage with:', deleteOptions);

    // Call deleteMessage API (onlyMe = false to delete for everyone)
    const result = await api.deleteMessage(deleteOptions, to, false);

    console.log('âœ… [zalo-service] Message recalled successfully:', {
      accountId,
      msgId,
      result
    });

    res.json({
      success: true,
      message: 'Message recalled successfully',
      data: result
    });
  } catch (error) {
    console.error('âŒ [zalo-service] Recall message error:', {
      message: error.message,
      stack: error.stack
    });
    res.status(500).json({
      success: false,
      message: error.message || 'Failed to recall message'
    });
  }
});

module.exports = router;
