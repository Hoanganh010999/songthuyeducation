/**
 * Helper function to record outgoing message activity for health monitoring
 */
function recordOutgoingMessage(accountId) {
  const healthMonitor = healthMonitors.get(accountId);
  if (healthMonitor) {
    healthMonitor.recordOutgoingMessage();
  }
}

/**
