// Reactions like LinkedIn
const reactions = [
  { type: 'like', emoji: 'üëç' },
  { type: 'love', emoji: '‚ù§Ô∏è' },
  { type: 'support', emoji: 'üôè' },
  { type: 'celebrate', emoji: 'üéâ' },
  { type: 'insightful', emoji: 'üí°' },
  { type: 'funny', emoji: 'üòÑ' },
